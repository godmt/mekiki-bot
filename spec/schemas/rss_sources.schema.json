{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RSSSources",
  "type": "object",
  "required": [
    "sources"
  ],
  "properties": {
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "feed_url",
          "enabled"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "feed_url": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "default_signals": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "grace_hours": {
            "type": "integer"
          },
          "max_catchup_days": {
            "type": "integer"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
