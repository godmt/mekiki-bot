{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TasteProfileProposal",
  "type": "object",
  "required": ["proposal_id", "new_profile_md", "diff_summary", "risks", "confidence"],
  "properties": {
    "proposal_id": { "type": "string" },
    "new_profile_md": { "type": "string", "maxLength": 12000 },
    "diff_summary": { "type": "array", "items": { "type": "string" }, "maxItems": 30 },
    "risks": { "type": "array", "items": { "type": "string" }, "maxItems": 20 },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "notes": { "type": "string" },
    "stats_used": { "type": "object" }
  },
  "additionalProperties": false
}
